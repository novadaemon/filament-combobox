{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "npx postcss resources/css/index.css -o resources/dist/filament-combobox.css --watch",
        "dev:scripts": "node bin/build.js --dev",
        "build:styles": "npx postcss resources/css/index.css -o resources/dist/filament-combobox.css --minify && npm run purge",
        "build:scripts": "node bin/build.js",
        "purge": "filament-purge -i resources/dist/filament-combobox.css -o resources/dist/filament-combobox.css -v 3.x",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/postcss": "^4.1.17",
        "@tailwindcss/typography": "^0.5.19",
        "autoprefixer": "^10.4.14",
        "esbuild": "^0.25.5",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.26",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^15.1.0",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "tailwindcss": "^4.1.11"
    }
}
